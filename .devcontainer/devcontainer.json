// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Node.js & TypeScript",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/typescript-node:1-22-bookworm",
  "customizations": {
    "vscode": {
      "extensions": [
        "eamodio.gitlens",
        "nrwl.angular-console",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "esbenp.prettier-vscode",
        "ms-playwright.playwright",
        "Orta.vscode-jest",
        "firsttris.vscode-jest-runner",
        "github.vscode-github-actions"
      ],
      "settings": {
        "dotenv.enableAutocloaking": true
      }
    }
  },
  // "containerEnv": {
  //   "DEFAULT_NVM_VERSION": "22",
  //   "PLAYWRIGHT_HTML_HOST": "0.0.0.0",
  //   "DEFAULT_YARN_VERSION": "4.7.0"
  // },
  "remoteEnv": {
    "DOTENV_CONFIG_PATH": "/workspaces/starrealms-assistant/.env"
  },
  "mounts": [
    "source=${localWorkspaceFolder}/.env,target=/workspaces/starrealms-assistant/.env,type=bind,consistency=cached"
  ],

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "set -a; . /workspaces/starrealms-assistant/.env; set +a; ./recover-yarn.sh && ./ensure-yarnrc.sh && ./setup-nvm.sh && yarn install && ./install-globals.sh && ./install-copilot-cli.sh && ./setup-shell-config.sh && npx nx reset && ./ensure-git-globals.sh"

  // Configure tool-specific properties.
  // "customizations": {},

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
